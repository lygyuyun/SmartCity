<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_radius_15_white"
    android:id="@+id/dialogContainer"
    android:paddingBottom="@dimen/dp_15">

    <ImageView
        android:id="@+id/ivClosed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingTop="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:src="@mipmap/ic_close_gray" />


    <TextView
        android:id="@+id/tvTitle"
        android:visibility="gone"
        style="@style/TextBold14spBlack333333"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvContentFirst"
        style="@style/Text13spBlack333333"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:lineSpacingMultiplier="1.6"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tvContentSecond"
        style="@style/Text13spBlack333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/app_name"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvContentThird"
        style="@style/Text13spBlack333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/app_name"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/posBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_25_blue_dfeff"
            android:gravity="center"
            android:paddingStart="@dimen/dp_30"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_30"
            android:minWidth="@dimen/dp_95"
            android:text="确定"
            android:textSize="@dimen/sp_12"
            android:textColor="#5593FF" />

        <TextView
            android:id="@+id/negBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/bg_gradient_radius_25_blue_5593ff_75d0ff"
            android:gravity="center"
            android:visibility="gone"
            android:paddingStart="@dimen/dp_30"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_30"
            android:minWidth="@dimen/dp_95"
            android:text="取消"
            android:letterSpacing="0.2"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>