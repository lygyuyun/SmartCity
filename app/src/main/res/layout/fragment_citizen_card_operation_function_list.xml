<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCardRecharge"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="@color/grayE0E0E0"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="市民卡充值" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_18"
                android:src="@mipmap/icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/grayE0E0E0"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_18" />
        </LinearLayout>


<LinearLayout
    android:id="@+id/llCardUnbind"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="市民卡解绑" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_18"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grayE0E0E0"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18" />

</LinearLayout>

<LinearLayout
    android:id="@+id/llCardCancel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="注销电子市民卡" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_18"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grayE0E0E0"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18" />
    </LinearLayout>

<LinearLayout
    android:id="@+id/llCardBind"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="绑定实体市民卡" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_18"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grayE0E0E0"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18" />
    </LinearLayout>


</LinearLayout>